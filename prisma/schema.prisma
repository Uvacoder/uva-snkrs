generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sneaker {
  id            String    @default(uuid()) @id
  model         String
  colorway      String
  brand         String
  size          Float     @default(10)
  imagePublicId String
  price         Int
  retailPrice   Int
  purchaseDate  DateTime?
  sold          Boolean   @default(false)
  soldDate      DateTime?
  soldPrice     Int?
}
