generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sneaker {
  id            String    @id @default(uuid())
  model         String
  colorway      String
  brand         String
  size          Float     @default(10)
  imagePublicId String
  price         Int
  retailPrice   Int
  purchaseDate  DateTime
  sold          Boolean   @default(false)
  soldDate      DateTime?
  soldPrice     Int?
  User          User      @relation(fields: [userId], references: [id])
  userId        String
}

model User {
  id       String    @id @default(uuid())
  name     String
  email    String    @unique
  username String    @unique
  password String
  sneakers Sneaker[]
}
